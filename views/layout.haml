!!! 5
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      = @title || 'PayByGroup Merchant Documentation'
    %meta{ :charset => 'utf-8' }
    %script{ :src => 'http://code.jquery.com/jquery.min.js', :type => 'text/javascript' }
    %link{ :href => '/css/documentation.css', :rel => 'stylesheet', :type => 'text/css' }
    %link{ :href => '/css/github.css', :rel => 'stylesheet', :type => 'text/css' }
    %script{ :src => '/javascripts/highlight.pack.js', :type => 'text/javascript' }
    %script{ :src => '/javascripts/sidebar.js', :type => 'text/javascript' }
    :javascript
      $(document).ready(function() {
        $('pre code').each(function(i, e) {hljs.highlightBlock(e)});
      });
    = yield_content :head
  %body
    #header-wrapper
      #header
        %div
          %a.logo{:href => "/"}
            %img{:alt => "PayByGroup API", :height => "45", :src => "/images/paybygroup.png"}/
          %ul.nav
            %li.api-status
              %a.good{:href => "https://status.github.com", :title => "API Status: good. Click for details.", :style => "width: 100px;display: block;"}
                Status: good
                %img{:src => "/images/status-icon-good.png", :style => "height: 16px; width: 16px;"}/
              %li
                %a{:href => "/"} main
              %li
                %a{:href => "http://paybygroup.com/merchant"} PayByGroup Merchant Site

    #wrapper
      = yield
    = haml :footer


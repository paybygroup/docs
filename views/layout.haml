!!! 5
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title
      = @title || 'PayByGroup Merchant Documentation'
    %meta{ :charset => 'utf-8' }
    %script{ :src => 'http://code.jquery.com/jquery.min.js', :type => 'text/javascript' }
    %link{ :href => '/css/documentation.css', :rel => 'stylesheet', :type => 'text/css' }
    %link{ :href => '/css/github.css', :rel => 'stylesheet', :type => 'text/css' }
    %script{ :src => '/javascripts/highlight.pack.js', :type => 'text/javascript' }
    %script{ :src => '/javascripts/sidebar.js', :type => 'text/javascript' }
    :javascript
      $(document).ready(function() {
        $('pre code').each(function(i, e) {hljs.highlightBlock(e)});
      });
    = yield_content :head
  %body
    #header-wrapper
      #header
        %div
          %a.logo{:href => "/"}
            %img{:alt => "PayByGroup API", :height => "45", :src => "/images/paybygroup.png"}/
          %ul.nav
            %li
              %a{:href => "http://paybygroup.com/merchants"} PayByGroup Merchant Site
            %li.api-status
              %a{:href => "https://lets.paybygroup.com", :title => "PayByGroup Status.", :class => "#{(@status == 'up' ) ? 'good' : 'major' }"}
                Status:
                = @status
              %li
                %a{:href => "http://paybygroup.com/contact-us/"} Contact

    #wrapper
      = yield
    = haml :footer

